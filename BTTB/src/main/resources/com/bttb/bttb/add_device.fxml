<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bttb.controller.AddDeviceController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Thêm Thiết Bị" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <Label text="Tên Thiết Bị:"/>
    <TextField fx:id="txtName"/>
    

    <Label text="Trạng Thái:"/>
    <ComboBox fx:id="statusComboBox" prefWidth="200" />
    
    <Label text="Loại thiết bị" layoutX="20" layoutY="140"/>
    <ComboBox fx:id="typeComboBox" layoutX="100" layoutY="140" prefWidth="200"/>


    
    <Button text="Thêm" onAction="#addDevice"/>
</VBox>